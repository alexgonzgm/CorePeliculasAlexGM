@model List<Genero>


    <div class="dropdown-menu">
        @foreach (Genero genero in Model)
        {
            <a class="dropdown-item"
               asp-controller="Peliculas"
               asp-action="MostrarPeliculasGenero"
               asp-route-idgenero="@genero.IdGenero">
            @genero.NombreGenero
            </a>
        }
    </div>


